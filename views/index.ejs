<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>

<body>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo App</a>
</nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2 ">
    </form>


    <ul class="list-group my-5">
        <% data.forEach(data => { %>
        <li class="list-group-item"><%= data.todo %>
            <div class ="text-right">
            <a href="/edit/todo/<%= data._id%>" class="btn btn-primary btn-sm ">Update</a>
            <a href="/delete/todo/<%= data._id %>"class="btn btn-danger btn-sm ">Delete</a>  
            </div>
        </li>
        <% }) %>

    </ul>
</div>